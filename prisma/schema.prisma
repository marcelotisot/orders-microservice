generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELLED
}
model Order {
  id        String      @id @default(uuid())
  total     Float

  status    OrderStatus @default(PENDING)
  paid      Boolean     @default(false)
  paidAt    DateTime?

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  @@map("orders")
}
